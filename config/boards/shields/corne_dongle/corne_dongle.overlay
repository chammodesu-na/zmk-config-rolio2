/*
 * Corne Dongle Overlay (Sniper Mode + Trackpad + MouseKeys)
 */

#include <dt-bindings/zmk/matrix_transform.h>
#include <dt-bindings/zmk/input_transform.h>
#include <input/processors.dtsi>
#include <layouts/foostan/corne/6column.dtsi>

&foostan_corne_6col_layout {
    transform = <&default_transform>;
};

/ {
    chosen {
        zmk,kscan = &mock_kscan;
        zmk,physical-layout = &foostan_corne_6col_layout;
    };

    mock_kscan: mock_kscan_0 {
        compatible = "zmk,kscan-mock";
        rows = <4>;
        columns = <12>;
        events = <0>;
    };

    default_transform: keymap_transform {
        compatible = "zmk,matrix-transform";
        rows = <4>;
        columns = <12>;
        map = <
            RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)  RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
            RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)  RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
            RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)  RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
                                    RC(3,3) RC(3,4) RC(3,5)  RC(3,6) RC(3,7) RC(3,8)
        >;
    };

    /* 1. íŠ¸ë™íŒ¨ë“œ ë°ì´í„° ìˆ˜ì‹ ë¶€ */
    split_inputs {
        #address-cells = <1>;
        #size-cells = <0>;
        tps43_split: tps43_split@74 {
            compatible = "zmk,input-split";
            reg = <0x74>;
        };
    };

    /* 2. [í•µì‹¬] ë§ˆìš°ìŠ¤ í‚¤(Key)ìš© ê°€ìƒ ì…ë ¥ ì¥ì¹˜ */
    uinput: uinput {
        compatible = "zmk,input-behavior-device";
        label = "UINPUT";
        #binding-cells = <1>;
    };

    /* === ë¦¬ìŠ¤ë„ˆ(ì†ë„ ì¡°ì ˆê¸°) ì„¤ì • === */
    
    /* A. íŠ¸ë™íŒ¨ë“œ ì„¤ì • (ê¸°ë³¸/ëŠë¦¼/ë¹ ë¦„) */
    
    /* A-1. íŠ¸ë™íŒ¨ë“œ ê¸°ë³¸ (Layer 0~4) */
    tp_listener_def {
        compatible = "zmk,input-listener";
        device = <&tps43_split>;
        layers = <0 1 2 3 4>;
        input-processors = <&zip_xy_transform (INPUT_TRANSFORM_XY_SWAP | INPUT_TRANSFORM_X_INVERT)>, 
                           <&zip_scroll_transform (INPUT_TRANSFORM_XY_SWAP)>,
                           <&zip_temp_layer 4 1000>,
                           <&zip_xy_scaler 3 2>; /* ê¸°ë³¸ ì†ë„ 1.5ë°° (ì·¨í–¥ê» ì¡°ì ˆ: 1 1ì€ ì›ë³¸) */
    };

    /* A-2. íŠ¸ë™íŒ¨ë“œ ìŠ¤ë‚˜ì´í¼ ëª¨ë“œ (Layer 5) */
    tp_listener_slow {
        compatible = "zmk,input-listener";
        device = <&tps43_split>;
        layers = <5>;
        input-processors = <&zip_xy_transform (INPUT_TRANSFORM_XY_SWAP | INPUT_TRANSFORM_X_INVERT)>, 
                           <&zip_scroll_transform (INPUT_TRANSFORM_XY_SWAP)>,
                           <&zip_xy_scaler 1 3>; /* ğŸ”¥ ì†ë„ 1/3ë¡œ ë–¡ë½ (ì •ë°€) */
    };

    /* A-3. íŠ¸ë™íŒ¨ë“œ ê³ ì† ëª¨ë“œ (Layer 6) */
    tp_listener_fast {
        compatible = "zmk,input-listener";
        device = <&tps43_split>;
        layers = <6>;
        input-processors = <&zip_xy_transform (INPUT_TRANSFORM_XY_SWAP | INPUT_TRANSFORM_X_INVERT)>, 
                           <&zip_scroll_transform (INPUT_TRANSFORM_XY_SWAP)>,
                           <&zip_xy_scaler 3 1>; /* ğŸ”¥ ì†ë„ 3ë°° (ë¯¸ì¹œ ì†ë„) */
    };


    /* B. ë§ˆìš°ìŠ¤ í‚¤ ì„¤ì • (í‚¤ë³´ë“œë¡œ ì›€ì§ì¼ ë•Œ) */

    /* B-1. ë§ˆìš°ìŠ¤í‚¤ ê¸°ë³¸ (Layer 0~4) */
    ukey_listener_def {
        compatible = "zmk,input-listener";
        device = <&uinput>;
        layers = <0 1 2 3 4>;
        input-processors = <&zip_xy_scaler 1 1>; /* ê¸°ë³¸ 1:1 */
    };

    /* B-2. ë§ˆìš°ìŠ¤í‚¤ ìŠ¤ë‚˜ì´í¼ ëª¨ë“œ (Layer 5) */
